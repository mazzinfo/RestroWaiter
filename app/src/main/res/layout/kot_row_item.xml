<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TableRow
            android:id="@+id/row_item_name"

            android:padding="1dp">

            <TextView
                android:id="@+id/tv_kot_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="start"
                android:text="Fresh Lime Soda"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold"

                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

            <ImageButton
                android:id="@+id/imb_kot_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:background="@drawable/close_button_shape"
                android:gravity="center"
                android:text="Remove"
                android:textColor="@color/white"
                android:textSize="2dp"
                app:srcCompat="@drawable/ic_close" />


        </TableRow>

        <TableRow
            android:id="@+id/row_kot_2"

            android:padding="1dp">

            <TextView
                android:id="@+id/tv_kot_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="70"
                android:textColor="@color/occupied"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/tv_kot_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"

                android:text="3"
                android:textColor="@color/occupied"
                android:textSize="14dp"

                />
            <TextView
                android:id="@+id/tv_kot_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"

                android:text="3"
                android:textColor="@color/occupied"
                android:textSize="14dp"

                />


        </TableRow>


    </TableLayout>

</RelativeLayout>